@model BookShopping.Models.ShoppingModel.UserComment
<h2>Yorum Yap</h2>
<div class="recommended_items">
    <!--recommended_items-->
    <div class="tab-pane fade active in" id="reviews">
        <div class="col-sm-12">
            
            <form asp-action="Create" asp-controller="Comment" method="post">
                <input type="hidden"   />
                <span>
                    <input type="text" asp-for="UserName" placeholder="Kullanıcı Adı" />
                    <input type="email" asp-for="Email" placeholder="E-Posta Adresi" />
                </span>
                <textarea asp-for="Comment" placeholder="Yorum Yaz"></textarea>
                <input type="submit" value="Gönder" class="btn btn-danger" />
              
            </form>
        </div>
    </div>

</div>