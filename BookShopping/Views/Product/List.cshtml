@model IEnumerable<BookShopping.Models.ShoppingModel.Product>
    <hr />
    <div class="recommended_items">
        <h2 class="title text-center">ÜRÜNLER</h2>
    </div>
    <form asp-controller="Product" asp-action="List" method="post">
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>

                    <tr>
                        <th>  Ürün Kodu</th>
                        <th>  Resim</th>
                        <th>  Ürün Adı</th>
                        <th>  Fiyat</th>
                        <th>  Miktar</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                <img src="@item.PictureWay" width="100" height="100" />
                            </td>

                            <td>
                                <a asp-action="Detail" asp-controller="Product" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Quantity)</td>

                        </tr>
}
                </tbody>
            </table>
        </div>
    </form>