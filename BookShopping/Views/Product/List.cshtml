@model IEnumerable<BookShopping.Models.ShoppingModel.Product>
<h1>ÜRÜN LİSTESİ</h1>
<a asp-controller="Category" asp-action="List" class="btn btn-fefault cart"><i class="fa fa-save"></i> Yeni Ürün Ekle</a>

    <form asp-controller="Product" asp-action="Index" method="post">       
                <div class="table-responsive cart_info">
                    <table class="table table-condensed">
                        <thead>

                            <tr>                               
                                <th>  Ürün Kodu</th>
                                <th>  Resim</th>
                                <th>  Ürün Adı</th>
                                <th>  Fiyat</th>
                                <th>  Miktar</th>
                                <th></th>
                                <th></th>
                                <th></th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                <tr>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        <img src="@item.PictureWay" width="100" height="100"/>
                    </td>

                    <td>
                        <a asp-action="Detail" asp-controller="Product" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>

                    <td>
                        <Button asp-action="Detail" asp-route-id="@item.Id" class="btn btn-fefault cart"><i class="fa fa-book"></i>  Detay</Button>
                        <button asp-action="Delete" asp-route-id="@item.Id" class="btn btn-fefault cart"><i class="fa fa-times"></i>  Sil</button>
                    </td>
                </tr>}
                        </tbody>
                    </table>
                </div>
    </form>