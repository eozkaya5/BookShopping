
@model IEnumerable<BookShopping.Models.ShoppingModel.Basket>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">  
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/css/prettyPhoto.css" rel="stylesheet">
    <link href="~/css/price-range.css" rel="stylesheet">
    <link href="~/css/animate.css" rel="stylesheet">
    <link href="~/css/main.css" rel="stylesheet">
    <link href="~/css/responsive.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
    <link rel="shortcut icon" href="images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="images/ico/apple-touch-icon-57-precomposed.png">
</head><!--/head-->

<body>
    <form asp-controller="Basket" asp-action="Index" method="post">
        <input type="hidden" name="ProductId" value="@ViewBag.ProductId" />

        
            <section id="cart_items">
                <div class="container">
                    <div class="breadcrumbs">                   
                    <div class="table-responsive cart_info">
                        <table class="table table-condensed">
                            <thead>
                                <tr class="cart_menu">
                                    <td>Resim</td>
                                    <th>Ürün Adı</th>
                                    <th>Ücret</th>
                                    <th>Miktar</th>
                                    <th>Tarih</th>
                                    <th>Toplam Ücret</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td class="cart_product">
                                            <img src="~/pictures/@item.Product.PictureWay" height="100" width="100" />
                                        </td>
                                        <td class="cart_description">
                                            <a asp-action="Detail" asp-controller="Product" asp-route-id="@item.ProductId">@Html.DisplayFor(modelItem => item.Product.Name)</a>
                                            <p>Ürün Kodu: @Html.DisplayFor(modelItem => item.Product.Id)</p>
                                        </td>
                                        <td class="cart_price">
                                            <p>@Html.DisplayFor(modelItem => item.Price)</p>

                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                                        <td> @Html.DisplayFor(modelItem => item.Date) </td>
                                        <td class="cart_total">
                                            @(item.Price * item.Quantity)
                                        </td>
                                        <td class="cart_delete">
                                            <a asp-controller="Basket" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-times"></i></a>
                                        </td>
                                        
                                    </tr>
                                }
                                </tbody>
                        </table>
                    </div>
                        </div>
                </div>
            </section> <!--/#cart_items-->
            <section id="do_action">
                @foreach (var basket in Model)
                {

                    <div class="container">
                        <div class="col-sm-6">
                            <div class="total_area">

                                <ul>
                                    <li>Sepet ara toplam:<span>@ViewBag.total</span></li>
                                    <li>Kargo ücreti: <span>0 ₺</span></li>
                                </ul>
                                <a asp-action="Index" asp-controller="Pay" asp-route-id="@basket.Id" class="btn btn-default check_out">Ödeme</a>
                            </div>
                        </div>
                    </div>
                }
                </section><!--/#do_action-->
        
    </form>
    <script src="~/js/jquery.js"></script>
    <script src="~/js/bootstrap.min.js"></script> 
    <script src="~/js/jquery.scrollUp.min.js"></script>
    <script src="~/js/jquery.prettyPhoto.js"></script>
    <script src="~/js/main.js"></script>
</body>
</html>
