@model IEnumerable<BookShopping.Models.Authentication.AppRole>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>ROLLER</h1>
<a asp-action="Create">Yeni Rol Ekle</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Oluşturma Tarihi
            </th>
            <th>
                Kullanıcı Adı
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                <a asp-action="Delete" asp-controller="Role" asp-route-id="@item.Id">Sil</a>
            </td>
            <td>
                <a asp-action="RoleAssign" asp-controller="Role" asp-route-id="@item.Id">Role Ata</a>
            </td>
        </tr>
        }

    </tbody>
</table>

